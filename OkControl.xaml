<UserControl x:Class="SudokuMaker.OkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SudokuMaker"
             mc:Ignorable="d">
    <Grid Width="200" Height="200">
        <Path Stroke="Green" StrokeThickness="25" Stretch="Fill">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="0,10">
                        <BezierSegment Point1="10,20" Point2="10,25" Point3="10,20" />
                        <BezierSegment Point1="10,-10" Point2="20,0" Point3="20,0" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
